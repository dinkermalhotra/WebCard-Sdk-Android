<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <!--android:background="@drawable/rsz_bg2x"-->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:tag="layout/activity_otp_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <com.abisyscorp.ivalt.custom.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration code required"
                android:gravity="left"
                android:visibility="gone"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp24"
                android:textSize="17sp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp40"
                android:visibility="gone"
                android:src="@drawable/rsz_white_logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp30"
                android:orientation="horizontal">
                <com.abisyscorp.ivalt.custom.NormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp20"/>
            </LinearLayout>

            <com.abisyscorp.ivalt.custom.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Code"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/libblue"
                android:textSize="@dimen/sp20"/>


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="@dimen/dp24"
                android:visibility="gone"
                android:src="@drawable/new_logo"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/ivImage"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp24"
                android:src="@drawable/ic_statusicon"/>

            <com.abisyscorp.ivalt.custom.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verification code"
                android:gravity="center"
                android:textSize="@dimen/dp22"
                android:layout_marginTop="@dimen/dp20"
                android:textColor="@color/p_color"/>

            <com.abisyscorp.ivalt.custom.NormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We have send you the verification code on +63 2 1234 7654"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp8"
                android:textStyle="bold"
                android:id="@+id/tvAName1"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:paddingTop="@dimen/dp30"
                        android:paddingBottom="@dimen/dp5"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="0.95">

                            <com.abisyscorp.ivalt.custom.NormalTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginBottom="5dp"
                                android:visibility="gone"
                                android:text="Enter iValt Registration code"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">
                                <com.abisyscorp.ivalt.custom.NormalEditText
                                    android:layout_width="@dimen/dp45"
                                    android:layout_height="@dimen/dp45"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:layout_marginEnd="@dimen/dp12"
                                    android:singleLine="true"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:textCursorDrawable="@drawable/my_custom_cursor_drawable"
                                    android:inputType="number"
                                    android:textColorHint="@color/gray"
                                    android:textSize="@dimen/sp15"
                                    android:hint="0"
                                    android:background="@drawable/stroke_round"
                                    android:id="@+id/etOtp1"/>
                                <com.abisyscorp.ivalt.custom.NormalEditText
                                    android:layout_width="@dimen/dp45"
                                    android:layout_height="@dimen/dp45"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:singleLine="true"
                                    android:maxLength="1"
                                    android:layout_marginEnd="@dimen/dp12"
                                    android:gravity="center"
                                    android:textCursorDrawable="@drawable/my_custom_cursor_drawable"
                                    android:inputType="number"
                                    android:textColorHint="@color/gray"
                                    android:textSize="@dimen/sp15"
                                    android:hint="0"
                                    android:background="@drawable/stroke_round"
                                    android:id="@+id/etOtp2"/>
                                <com.abisyscorp.ivalt.custom.NormalEditText
                                    android:layout_width="@dimen/dp45"
                                    android:layout_height="@dimen/dp45"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:singleLine="true"
                                    android:maxLength="1"
                                    android:layout_marginEnd="@dimen/dp12"
                                    android:gravity="center"
                                    android:textCursorDrawable="@drawable/my_custom_cursor_drawable"
                                    android:inputType="number"
                                    android:textColorHint="@color/gray"
                                    android:textSize="@dimen/sp15"
                                    android:hint="0"
                                    android:background="@drawable/stroke_round"
                                    android:id="@+id/etOtp3"/>
                                <com.abisyscorp.ivalt.custom.NormalEditText
                                    android:layout_width="@dimen/dp45"
                                    android:layout_height="@dimen/dp45"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:singleLine="true"
                                    android:maxLength="1"
                                    android:gravity="center"
                                    android:textCursorDrawable="@drawable/my_custom_cursor_drawable"
                                    android:inputType="number"
                                    android:textColorHint="@color/gray"
                                    android:textSize="@dimen/sp15"
                                    android:hint="0"
                                    android:background="@drawable/stroke_round"
                                    android:id="@+id/etOtp4"/>
                            </LinearLayout>



                            <com.abisyscorp.ivalt.custom.NormalButton
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp42"
                                android:text="Didn’t receive code? Resend"
                                android:id="@+id/btnResend"
                                android:textSize="@dimen/sp14"
                                android:paddingLeft="@dimen/dp8"
                                android:paddingRight="@dimen/dp8"
                                android:textColor="@color/p_color"
                                android:textAllCaps="false"
                                android:layout_marginTop="@dimen/dp16"
                                android:layout_gravity="center"
                                android:background="@color/transparent" />


                        </LinearLayout>



                    </LinearLayout>







                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.45"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <com.abisyscorp.ivalt.custom.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/errMsg"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/dp30"
                        android:text="Please enter a valid OTP"
                        android:textColor="@color/new_red"
                        android:textSize="@dimen/dp12"/>

                    <LinearLayout
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="@dimen/dp16"
                        android:background="@drawable/circleshadow"
                        android:id="@+id/linInfo"
                        android:visibility="gone"
                        android:gravity="center">

                        <com.abisyscorp.ivalt.custom.NormalTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="i"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp16"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/dp10">
                            <com.abisyscorp.ivalt.custom.NormalButton
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp42"
                                android:text="Back"
                                android:id="@+id/btnBack"
                                android:textSize="@dimen/sp16"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:background="@drawable/gray_button" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1">

                            <com.abisyscorp.ivalt.custom.NormalButton
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp45"
                                android:text="Verify"
                                android:textSize="@dimen/sp16"
                                android:id="@+id/btnSumbit"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:layout_gravity="center"
                                android:background="@drawable/gray_button"/>

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp24"
                        android:visibility="gone"
                        android:src="@drawable/webcom3x"/>

                    <com.abisyscorp.ivalt.custom.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Universal Biometric ID®"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                </LinearLayout>








            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginBottom="@dimen/dp24"
                android:background="#D0CCCD"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp42"
                android:textColor="@color/white"
                android:text="@string/submit"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:textAllCaps="false"
                android:textSize="@dimen/sp15"
                android:background="@drawable/gradient_button"
                android:visibility="gone"/>


        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/loader"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/white">

        <com.abisyscorp.ivalt.custom.NormalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Powered by "/>
        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:src="@drawable/rsz_white_logo"/>

        <com.abisyscorp.ivalt.custom.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iVALT"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/sp16"
            android:textColor="@color/black" />
        <com.abisyscorp.ivalt.custom.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="®"
            android:textSize="@dimen/sp16"
            android:layout_marginTop="-5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>
</RelativeLayout>


         