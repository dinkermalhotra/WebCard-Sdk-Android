<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   
   <!-- android:background="@drawable/rsz_bg2x" -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:tag="layout/activity_process_enrollment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:orientation="horizontal"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="@dimen/dp24"
                    android:visibility="gone"
                    android:src="@drawable/new_logo"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:id="@+id/ivImage"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp24"
                    android:src="@drawable/rsz_white_logo"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <com.abisyscorp.ivalt.custom.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="iVALT"
                        android:id="@+id/tvAName"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="22sp"/>
                    <com.abisyscorp.ivalt.custom.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="®"
                        android:layout_marginTop="-5dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="22sp"/>
                </LinearLayout>

                <com.abisyscorp.ivalt.custom.NormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Universal Biometric ID™\nAuthenticate Anywhere®"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/tvAName1"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp30"
                    android:orientation="horizontal">
                    <com.abisyscorp.ivalt.custom.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Authentication"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp20"/>
                </LinearLayout>

                <com.abisyscorp.ivalt.custom.BoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/libblue"
                    android:textSize="@dimen/sp20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp16"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linSuccessText"
                            android:gravity="center"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/tvSuccessText"
                                android:visibility="gone"
                                android:src="@drawable/ic_successillustration"
                                android:text="Congratulations!\nYou have successfully created your Universal Biometric ID™ with iVALT®\n\nTo use this further, please enroll this ID in one of our supported 3rd party apps ad described in our FAQ accessible through &quot;info&quot; button."
                                android:textColor="@color/white" />

                            <com.abisyscorp.ivalt.custom.BoldTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Success"
                                android:gravity="center"
                                android:id="@+id/tvSuccessText2"
                                android:textColor="@color/p_color"
                                android:textSize="@dimen/sp18"/>

                            <com.abisyscorp.ivalt.custom.NormalTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="You have successfully completed the authentication"
                                android:gravity="center"
                                android:id="@+id/tvSuccessText3"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/sp18"/>
                        </LinearLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:gravity="bottom"
                        android:layout_marginBottom="@dimen/dp35"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:visibility="gone"
                            android:layout_marginBottom="@dimen/dp16"
                            android:background="@drawable/circleshadow"
                            android:id="@+id/linInfo"
                            android:gravity="center">

                            <com.abisyscorp.ivalt.custom.NormalTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:text="i"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/dp10">

                                <com.abisyscorp.ivalt.custom.NormalButton
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp45"
                                    android:text="Done"
                                    android:textSize="@dimen/sp16"
                                    android:id="@+id/btnSumbit"
                                    android:textColor="@color/white"
                                    android:textAllCaps="false"
                                    android:layout_gravity="center"
                                    android:background="@drawable/gray_button"/>

                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp24"
                            android:visibility="gone"
                            android:src="@drawable/webcom3x"/>

                        <com.abisyscorp.ivalt.custom.BoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="Universal Biometric ID®"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                    </LinearLayout>








                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginBottom="@dimen/dp24"
                    android:background="#D0CCCD"/>

                <com.abisyscorp.ivalt.custom.NormalButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp42"
                    android:textColor="@color/white"
                    android:text="@string/submit"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16"
                    android:textAllCaps="false"
                    android:textSize="@dimen/sp15"
                    android:background="@drawable/gradient_button"
                    android:visibility="gone"/>


            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/loader"
            android:visibility="gone"
            style="?android:attr/progressBarStyleLarge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="@color/white">

            <com.abisyscorp.ivalt.custom.NormalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Powered by "/>
            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/rsz_white_logo"/>

            <com.abisyscorp.ivalt.custom.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iVALT"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/sp16"
                android:textColor="@color/black" />
            <com.abisyscorp.ivalt.custom.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="®"
                android:textSize="@dimen/sp16"
                android:layout_marginTop="-5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black" />

        </LinearLayout>
    </RelativeLayout>


         