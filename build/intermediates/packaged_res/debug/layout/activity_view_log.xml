<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/relMain"
        android:background="@color/white" android:tag="layout/activity_view_log_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/frmBack">

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:src="@drawable/back_white"
                    android:layout_gravity="center"
                    android:id="@+id/ivBack" />

                <com.abisyscorp.ivalt.custom.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:paddingLeft="2dp"
                    android:id="@+id/tvBack"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <com.abisyscorp.ivalt.custom.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:layout_gravity="center"
                android:text="View Logs"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:background="@color/text_gray"/>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:divider="#bbb"
                android:dividerHeight="0.1dp"
                android:layout_marginTop="@dimen/dp16"
                android:id="@+id/listView"/>

            <com.abisyscorp.ivalt.custom.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currently no logs found!"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/sp16"
                android:textColor="@color/blackish"
                android:layout_centerInParent="true"
                android:id="@+id/tvDefault"
                android:textSize="20sp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/loader"
                android:visibility="gone"
                style="?android:attr/progressBarStyleLarge"/>

        </RelativeLayout>

    </LinearLayout>
         